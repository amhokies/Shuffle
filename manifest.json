{
  "name": "Shuffle",
  "description": "Shuffle play episodes of Netflix and Hulu shows",
  "version": "0.1",
  "permissions": [
      "declarativeContent"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Shuffle",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
